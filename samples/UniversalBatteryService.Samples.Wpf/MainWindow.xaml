<Window x:Class="UniversalBatteryService.Samples.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UniversalBatteryService.Samples.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel Margin="24,0,24,0">
            <TextBlock Text="Battery" FontSize="24" />

            <TextBlock Text="Battery life time" Margin="0,20,0,0" FontSize="10" />
            <TextBlock x:Name="BatteryLife" Text="- %" FontSize="18" />

            <TextBlock Text="Remaining discharge time" Margin="0,20,0,0" FontSize="10" />
            <TextBlock x:Name="BatteryLifeTime" Text="-" FontSize="18" />

            <TextBlock Text="Battery status" Margin="0,20,0,0" FontSize="10" />
            <TextBlock x:Name="BatteryStatus" Text="unknown" FontSize="18" />
        </StackPanel>
    </Grid>
</Window>
